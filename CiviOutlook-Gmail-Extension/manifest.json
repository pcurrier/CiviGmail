{
  "manifest_version": 2,
  "name": "Veda Gmail-Civi Extension",
  "description": "Gmail Extension to communicate with Civi",
  "version": "0.1",
  "browser_action": {
    "default_popup": "setting/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "jquery-1.10.2.min.js",
    "gmail.js",
    "main.js",
    "setting/utils.js"
  ],
  "permissions": [
    "identity",
    "storage",
    "http://mailchimp.vedaconsulting.co.uk/civicrm/gmail/logactivity*"
  ]
}
